generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  profileId     Int       @unique
  accounts      Account[]
  sessions      Session[]
  profile       Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Profile {
  id            Int         @id @default(autoincrement())
  description   String?
  grad          Int?        @db.SmallInt
  createdAt     DateTime    @default(now())
  curProblemId  Int?
  problemsRight Int         @default(0)
  problemsSkip  Int         @default(0)
  problemsWrong Int         @default(0)
  preference    ContestType @default(ANY)
  curProblem    Problem?    @relation(fields: [curProblemId], references: [id], onDelete: NoAction)
  user          User?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Contest {
  id             Int         @id @default(autoincrement())
  title          String
  year           Int         @db.SmallInt
  formattedTitle String
  link           String
  type           ContestType
  problems       Problem[]
}

model Problem {
  id             Int         @id @default(autoincrement())
  formattedTitle String
  contestId      Int         @db.SmallInt
  link           String
  answer         String
  problem        String
  solutions      Json
  type           ContestType
  problemNum     Int         @db.SmallInt
  title          String
  contest        Contest     @relation(fields: [contestId], references: [id], onDelete: Cascade)
  usersDoing     Profile[]
}

enum ContestType {
  AMC8
  AMC10
  AMC12
  AHSME
  ANY
}
